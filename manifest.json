{
    "name": "Chrome Restarter",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "restart.png"
    },
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}