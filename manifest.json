{
    "name": "HTML Source Viewer",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "restart.png"
    },
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ]
}